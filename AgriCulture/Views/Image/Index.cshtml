@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Image Table</h4>
          
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                          <th>#</th>
                          <th>Title</th>
                          <th>Sil</th>
                          <th>Duzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {

                        
                        <tr>
                            <td class="py-1">
                                <img src="@item.ImageUrl" alt="image" />
                            </td>
                            <td>@item.Title</td>
                            <td><a href="/Image/DeleteImage/@item.ImageID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Image/EditImage/@item.ImageID" class="btn btn-outline-success">Duzenle</a></td>
                          
                        </tr>
                       
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Image/AddImage/" class="btn btn-outline-info">Yeni Image Duzenle</a>
            </div>
        </div>
    </div>
</div>

