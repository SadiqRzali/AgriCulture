@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>

                           <th>#</th>
                           <th>User</th>
                           <th>Sil</th>
                           <th>Guncelle</th>
                  
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.ID</td>
                                <td>@item.UserName</td>
                                <td><a href="/Admin/DeleteAdmin/@item.ID" class="btn btn-outline-success">Sil</a></td>
                                <td><a href="/Admin/EditAdmin/@item.ID" class="btn btn-outline-success">Guncelle</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <a href="/Admin/AddAdmin/" class="btn btn-outline-success">Yeni Admin Elave et</a>
            </div>
        </div>
    </div>
</div>



