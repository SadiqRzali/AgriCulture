@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bordered table</h4>
          
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                           <th>#</th>
                           <th>Baslik</th>
                           <th>Aciglama</th>
                           <th>Sil</th>
                           <th>Duzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var  item in Model)
                       {
                           <tr>
                               <td>@item.ServiceID</td>
                               <td>@item.Title</td>
                               <td>@item.Description</td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success">Guncelle</a></td>
                           </tr>
                           
                       }
               
                    </tbody>
                </table>
                <br />
                <a href="/Service/AddService/" class="btn btn-outline-info">Yeni Xidmet Girisi</a>
            </div>
        </div>
    </div>
</div>
