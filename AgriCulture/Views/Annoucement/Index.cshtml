@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Melumat Table</h4>

            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Baslik</th>
                            <th>Date</th>
                            <th>Sil</th>
                            <th>Duzenle</th>
                            <th>Aktiv</th>
                            <th>Passiw</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Annoucement/DeleteAnnouncement/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Annoucement/EditAnnouncement/@item.ID" class="btn btn-outline-success">Guncelle</a></td>
                                <td><a href="/Annoucement/ChangeTrue/@item.ID" class="btn btn-outline-warning">Aktiv</a></td>
                                <td><a href="/Annoucement/ChangeFalse/@item.ID" class="btn btn-outline-secondary">Passiv</a></td>
                            </tr>

                        }

                    </tbody>
                </table>
                <br />
                <a href="/Annoucement/AddAnnouncement/" class="btn btn-outline-info">Yeni Xidmet Girisi</a>
            </div>
        </div>
    </div>
</div>


