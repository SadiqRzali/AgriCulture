@using EntityLayer.Concrete
@model List<iletisim>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Messaj Sayfasi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Mesaji Gor</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           <tr>
                               <td>@item.ContactID</td>
                               <td>@item.Name</td>
                               <td>@item.Mail</td>
                               <td>@item.Date</td>
                                <td><a href="/iletisim/MesageDetails/@item.ContactID" class="btn btn-outline-success">Mesaj Gor</a></td>
                           </tr>
                        }
                    </tbody>
                </table>
         
            </div>
        </div>
    </div>
</div>

